<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShareBook</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <div class="logo">ðŸ“š ShareBook></div>
        <nav>
            <a href="/books">Home</a>
            <a href="/books/user/<%= user.id %>">My books</a>
            <a href="/books/create/">Create a book ad</a>
            <a href="/profile/<%= user.id %>" class="nav-btn">Profile</a>
            <a href="/logout">Logout</a>
        </nav>
       
    </header>
    <div class="categories">
        <button class="<%= !selectedCategory ? 'active' : '' %>">
            <a href="/books" class="category-link">All</a>
        </button>
        <% categories.forEach(category => { %>
            <button class="<%= selectedCategory === category.id ? 'active' : '' %>">
                <a href="/books?category=<%= category.id %>" class="category-link"><%= category.name %></a>
            </button>
        <% }) %>
    </div>
    <div class="book-container">
        <% if (books.length === 0) { %>
            <p>No books found in this category.</p>
        <% } else { %>
            <% books.forEach(book => { %>
                <div class="book-card">
                    <img src="<%= book.imageUrl %>" alt="<%= book.title %>">
                    <h3><%= book.title %></h3>
                    <p class="author"><%= book.author %></p>
                    <p class="author"><%= book.description %></p>
                    <p class="price">$<%= book.price.toFixed(2) %></p>
                </div>
            <% }) %>
        <% } %>
    </div>
</body>
</html>