<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Book - ShareBook</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <div class="logo">ðŸ“š ShareBook></div>
    <nav>
      <a href="/books">Home</a>
      <a href="/books/user/<%= user.id %>">My books</a>
      <a href="/books/create/">Create a book ad</a>
      <a href="/profile/<%= user.id %>" class="nav-btn">Profile</a>
      <a href="/logout">Logout</a>
  </nav>
</header>
  <main>
    <section class="form-section">
      <h2>Create a New Book</h2>
      <form action="/books" method="POST" class="auth-form">
        <input type="hidden" name="userId" value="<%= user ? user.id : 'guest' %>">
        <div class="form-group">
          <label for="category_id">Category:</label>
          <select id="category_id" name="category_id" required>
            <option value="">Select a category</option>
            <% categories.forEach(category => { %>
              <option value="<%= category.id %>" <%= category.id === '2' ? 'selected' : '' %>>
                <%= category.name %>
              </option>
            <% }) %>
          </select>
        </div>
        <div class="form-group">
          <label for="title">Title:</label>
          <input type="text" id="title" name="title" required>
        </div>
        <div class="form-group">
          <label for="author">Author:</label>
          <input type="text" id="author" name="author" required>
        </div>
        <div class="form-group">
          <label for="price">Price:</label>
          <input type="number" id="price" name="price" step="0.01" required>
        </div>
        <div class="form-group">
          <label for="description">Description:</label>
          <textarea id="description" name="description" required></textarea>
        </div>
        <div class="form-group form-group-row">
          <div class="input-wrapper">
            <label for="imageUrl">Image URL:</label>
            <input type="url" id="imageUrl" name="imageUrl" required>
          </div>
          <button type="submit" class="btn btn-primary">Create Book</button>
        </div>
      </form>
    </section>
  </main>
</body>
</html>